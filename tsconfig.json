{
  "compileOnSave": true,
  "compilerOptions": {
    "strict": true,
    "jsx": "react",
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "module": "ESNext",
    "target": "es5",
    "lib": [
      "dom",
      "es2015",
      "es6",
      "esnext"
    ],
    "baseUrl": ".",
    "paths": {
      "components/*": ["./src/components/*"],
      "scss/*": ["./src/scss/*"]
    },
    "allowJs": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "keyofStringsOnly": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "./node_modules/**/*"
  ]
}